<!DOCTYPE html>
<html>
  <head>
    <title> Graduate School USA | <%= title %></title>
    <% include ../../partials/head %>
  </head>
  <body>
    <% include ../../partials/header %>
      <div id="container" class="container">
        <div class="loading" style="display:none;"></div>
        <div id="outer" class="col-lg-12 col-md-12 col-sm-12 form-fix padding20">
          <div id="gs-form">
              <div id="cart">
                <div id="cart-items">
                  <table>
                    <tr>
                      <th>Course</th>
                      <th>Session</th>
                      <th>Type</th>
                      <th>Cost</th>
                    </tr>
                    <tr>
                      <td><%= course.title %></td>
                      <td>
                        <%= session["startDate"].slice(0,-6) %> - <%= session["endDate"]%> <br/>
                          <% if (session["startTime"] !== null || session["endTime"] !== null) { %>
                            <%= session["startTime"]%> - <%= session["endTime"]%>
                          <% } %>
                          <% if (session["days"] !== null) { %>
                          , <%= session["days"] %>
                          <% } %>
                      </td>
                      <td><%= course.type %></td>
                      <td>$<%= session["tuition"] %></td>
                    </tr>
                  </table>
                </div> <!-- END cart-items -->
                <div class="spacer25"></div>
                <div id="payment-info">
                  <table>
                    <tr>
                      <th>Payment Method</th>
                      <th>Payment Details</th>
                    </tr>
                    <tr>
                      <td>Credit Card</td>
                      <td><%= authorization.cardNumber %> - Expires <%= authorization.cardExpiry %></td>
                    </tr>
                  </table>
                </div> <!-- END payment-info -->
                <div class="spacer10"></div>
                <div id="buttons" class="pull-right">
                    <form id="cart-form-cancel" style="display: inline;" method="post" action="/manage/cart/payment/cancel">
                      <button id="cart-form-cancel-submit" type="submit" tabindex="10">Cancel</button>
                    </form>
                  <% if (authorization.approved) { %>
                      <form id="cart-form-complete" style="display: inline;" method="post" action="/manage/cart/payment/complete">
                        <button id="cart-form-complete-submit" type="submit" tabindex="11">Complete Registration</button>
                      </form>
                  <% } else { %>
                    <span id="declined-message">We are sorry, but your credit card was declined.</span>
                <% } %>
                </div> <!-- END buttons -->
            </div>  <!-- END cart -->
          </div> <!--END gs-form-->
        </div> <!--END outer-->
      </div> <!--END container-->
    <!-- Footer -->
    <% include ../../partials/footer %>
    <!-- END Footer  -->
    <!-- Chat  -->
    <% include ../../partials/chat %>
    <!-- END of Chat  -->
  </body>
</html>
