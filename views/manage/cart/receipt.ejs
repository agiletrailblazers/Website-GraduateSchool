<!DOCTYPE html>
<html>
  <head>
    <title> Graduate School USA | <%= title %></title>
    <% include ../../partials/head %>
  </head>
  <body>
    <% include ../../partials/header %>
      <div id="container" class="container">
        <div class="loading" style="display:none;"></div>
        <div id="outer" class="col-lg-12 col-md-12 col-sm-12 form-fix padding20">
            <div>
              <span>Your payment and registration have been completed.  Please print out this page for your records.</span>
            </div>
            <div class="spacer25"></div>
            <div id="cart">
              <div id="cart-items">
                <table>
                  <tr>
                    <th>Course</th>
                    <th>Session</th>
                    <th>Type</th>
                    <th>Cost</th>
                  </tr>
                  <tr>
                    <td><%= course.title %></td>
                    <td>
                      <%= session["startDate"].slice(0,-6) %> - <%= session["endDate"]%> <br/>
                        <% if (session["startTime"] !== null || session["endTime"] !== null) { %>
                          <%= session["startTime"]%> - <%= session["endTime"]%>
                        <% } %>
                        <% if (session["days"] !== null) { %>
                        , <%= session["days"] %>
                        <% } %>
                    </td>
                    <td><%= course.type %></td>
                    <td>$<%= session["tuition"] %></td>
                  </tr>
                </table>
              </div> <!-- END cart-items -->
              <div class="spacer25"></div>
              <div id="payment-info">
                <table>
                  <tr>
                    <th>Payment Method</th>
                    <th>Payment Details</th>
                    <th>Order Number</th>
                  </tr>
                  <tr>
                    <td>Credit Card</td>
                    <td><%= payment.cardNumber %> - Expires <%= payment.cardExpiry %></td>
                    <td><%= registrations[0].orderNumber %></td>
                  </tr>
                </table>
              </div> <!-- END payment-info -->
          </div>  <!-- END cart -->
        </div> <!--END outer-->
      </div> <!--END container-->
    <!-- Footer -->
    <% include ../../partials/footer %>
    <!-- END Footer  -->
    <!-- Chat  -->
    <% include ../../partials/chat %>
    <!-- END of Chat  -->
  </body>
</html>
