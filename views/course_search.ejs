<!DOCTYPE html>
<html>
<head>
  <title><%= content.pageTitle %></title>
  <% include partials/head %>
  <link rel='stylesheet' href='/stylesheets/course_search.css' />
  <link rel="stylesheet" href="/stylesheets/library/spinners.css">

  <!-- Style fix for Link color - to be removed after -->
  <style media="screen">
    a:link, a:visited{
      color: #337AB7;
      text-decoration: none;
    }
    a:hover, a:active{
      color: #000;
      text-decoration: none;
      background-color: transparent;
    }
    a.button:link,
    a.button:visited {
      color: #FFF;
      background-position: 0px 15px;
    }
    a.button:hover,
    a.button:active {
      color: #FFF;
      background-position: 0px 15px;
      border: 1px solid transparent;
    }
  </style>
</head>
  <body>
    <% include partials/header %>
    <!-- Title Section -->
    <div class="container-fluid title">
      <div class="container">
        <div class="loading" style="display:none;"></div>
        <div class="row clearfix">
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
            <h1 id="results-for">Results for </h1>
            <p> <img src="../images/homepage.png" alt="" /> Home / Search Results </p>
          </div>
          <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-xs-offset-2">
            <div class="util">
              <ul>
                <li><a href="#"><img src="../images/print.png" alt="" /></a></li>
                <li><a href="#"><img src="../images/email-me.png" alt="" /></a></li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>
    <!-- END Title Section -->

    <!-- <h1><%= content.resultsSectionTitle %></h1> -->

    <div class="container">
          <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-4">
              <div class="filters">
                <div class="panel-group">
                  <div class="panel panel-default gs">
                    <div class="panel-heading gs">
                      <div class="row clearfix">
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 pull-left">
                          <h4 class="panel-title">
                            <a data-toggle="collapse" href="#refine-results"> Refine Results</a>
                          </h4>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                          <div class="refine">
                            <a href="#"><p class="clear">X<br>clear all</p></a>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div id="refine-results" class="panel-collapse collapse in">
                      <div class="panel-body">
                        <input type="checkbox" name="G2G" value="" /> <strong>Guaranteed To Go</strong> <br>

                        <hr>
                      <span class="form-group">
                        <p>Location <a href="#" class="checkbox-clear">clear</a></p>
                        <select id="selLocation" class="form-control" >
                          <option value="all">All</option>
                          <%
                            locationFacetsKeys = Object.keys(locationFacets);
                            locationFacetsKeysLength = locationFacetsKeys.length;
                            locationFacetsKeys.sort();
                            for (locationFacetsKeyCounter = 0; locationFacetsKeyCounter < locationFacetsKeysLength; locationFacetsKeyCounter++) {
                              locationFacetsKey = locationFacetsKeys[locationFacetsKeyCounter];
                          %>
                          <option value="<%= locationFacetsKey%>"><%= locationFacetsKey%>  <%= "("+locationFacets[locationFacetsKey]+")"%></option>
                          <%
                          }
                          %>
                          </select>
                      </span>
                      <hr>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% include partials/course_search_detail %>
          </div>
     </div> <!-- END container -->

     <input type="hidden" id="txtSearchCriteria" value="<%= params.searchCriteria %>" />

     <% include partials/chat %>
     <% include partials/footer %>
     <script type="text/javascript" src="/javascripts/course_search.js"></script>

  </body>
</html>
