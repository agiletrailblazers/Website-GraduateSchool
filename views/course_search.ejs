<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <script type="text/javascript" src="/javascripts/jquery-2.1.4.min.js"></script>
  <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/course_search.css' />
  <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
  <link rel='stylesheet' href='/stylesheets/bootstrap-theme.min.css' />
</head>
<body>
  <div class="container">
    <h1>Course Search Results</h1>
    <% if (result == null || result.courses == null || result.courses.length == 0) { %>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        No matches
      </div>
      <% } else { %>
        <% for(var i=0; i<result.courses.length; i++) { %>
          <div id="course-result">
            <h3><a href="/courses/<%= result.courses[i].id %>"><%= result.courses[i].id %> - <%= result.courses[i].title %></a></h3>
          </div>
          <div><%= result.courses[i].description %></div>
          <hr>
        <% } %>
      <% } %>
  </div>
      </body>
      </html>
