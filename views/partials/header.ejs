<!--  HEADER -->
<div id="header" class="container">
	<div class="row header clearfix">
		<header>
				<div class="col-lg-9 col-md-8 col-sm-7 col-xs-7 non-mobile ">
					<a href="/">
						<img alt="Graduate School" src="/images/logo.png" class="logo logo-fix-mid">
					</a>
				</div>
				<div class="col-lg-9 col-md-8 col-sm-9 col-xs-9 header-mob mobile ">
					<a href="/">
						<img alt="Graduate School" src="/images/logo-mobile.png" class="logo-mob">
					</a>
				</div>

				<div class="col-lg-3 col-md-4 col-sm-5 col-xs-5 non-mobile">
					<div class="spacer"></div>
					<div class="wrapper">
						<div id="searchIcon">
							<img alt="" src="/images/search.png">
						</div>

						<div id="home-search" class="searchBox">
							<form id="search-form" action="javascript:performCourseSearch();">
								<div id="searchGroup" class="input-group">
									<input type="text" id="searchCriteria" name="searchCriteria" class="form-control searchCriteria" placeholder="Search" tabindex="1">
									<span class="input-group-btn">
										<button id="course-search-button" class="btn btn-default" type="submit">
											<img alt="" src="/images/search.png">
										</button>
									</span>
								</div>
								<div id="advancedSearchBox" class="advanced-box-filters" style="display:none;">
											<div class="wrapper">
												<div class="padding0">
													<p class="search-box-intro">
														Refine results by:
													</p>
												</div>
												<div class="center-filter">
													<select id="selSearchLocation" class="form-control" tabindex="2">
															<option value="">Locations</option>
															<% locations.forEach(function(location) { %>
																<option value="<%= location %>"><%= location %></option>
															<% }); %>
													</select>
												</div>
												<div class="center-filter">
													<select id="selCategorySubject" class="form-control" tabindex="3">
								            <option class="subject-item" value="all">Subject</option>
														<% if (courseSubjectResult != null) { %>
									            <% for (categorySubjectFacetCounter = 0; categorySubjectFacetCounter < courseSubjectResult.length; categorySubjectFacetCounter++) {
									              var courseSubject = courseSubjectResult[categorySubjectFacetCounter].courseSubject;
									              if (courseSubject.length > 1 ) { %>
									                <optgroup class="subject-category" label="<%= courseSubjectResult[categorySubjectFacetCounter].category %>"
									              %><%= courseSubjectResult[categorySubjectFacetCounter].subjectCount %>)>
									              <% for (courseSubjectCounter = 0; courseSubjectCounter < courseSubject.length; courseSubjectCounter++) {
									              %>
									                <option value="<%= courseSubjectResult[categorySubjectFacetCounter].category + "/" + courseSubject[courseSubjectCounter].subject %>"
									                ><%= courseSubject[courseSubjectCounter].subject %>
									                </option>
									              <% } %>
									                </optgroup>
									              <% } else if(courseSubject.length == 1) { %>
									                <option class="subject-item"
									                  value="<%= courseSubjectResult[categorySubjectFacetCounter].category + "/" + courseSubject[0].subject %>">
									                  <%= courseSubject[0].subject %>
									                </option>
									              <% }
									             } %>
													  <% } %>
								          </select>
												</div>
												<div class="pull-right padding-top">
													<p class="btn"><a id="search-button" class="search" href="#" role="button" tabindex="4">Search <img src="/images/arrow.png" alt=""></a></p>
												</div>
											</div>
									 </div>
       				</form>
						</div> <!-- END searchBox #HomeSearch -->
					</div>
				</div>
		</header><!-- END header -->
	</div> <!-- END Row -->
</div><!-- END Container -->

<!-- Navigation  -->
<% include ../partials/nav %>
<!-- END Navigation  -->
