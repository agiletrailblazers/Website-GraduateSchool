<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Recent News Entries</title>
  <% include ../partials/head %>
  <!-- Style fix for Link color - to be removed after -->
  <style media="screen">
  a.readmore:link,
  a.readmore:visited {
    color: #fff;
    background-position: 0 15px;
  }

  a.readmore:hover,
  a.readmore:active {
    color: #fff;
    background-position: 0 15px;
    border: 1px solid transparent;
  }
  </style>
</head>
<body>
  <!--  Header include -->
  <div class="container-fluid">
    <div class="container">
      <div class="row nm header clearfix">
        <% include ../partials/header %>
      </div>
      <!-- /end Row Container -->
    </div>
    <!-- /end Header include -->
    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-9">
          <h1 class="page-header">
            Recent News
            <small>Secondary Text</small>
          </h1>
          <!-- First Blog Post -->
          <% for (var i = 0; i < posts.length; i++) { %>
            <h3>
              <a href='/news/<%= posts[i].fields.slug %>'><%= posts[i].fields.title %></a>
            </h3>
            <p>
              <span class="glyphicon glyphicon-time"></span>
              Posted on
              <%= posts[i].fields.date.date('MMM DD, YYYY') %></p>
              <p><%= prune(striptags(posts[i].fields.body), 300, "...") %></p>
              <a class="btn btn-primary readmore" href='/news/<%= posts[i].fields.slug %>'>Read More
                <span class="glyphicon glyphicon-chevron-right"></span>
              </a>
              <hr>
          <% } %>
        </div>
        <!-- END Blog Entries Column -->
      </div>
      <!-- END Row -->
    </div>
    <!-- END Container -->
    <!-- Include Footer Here! -->
    <% include ../partials/footer %>
  </div>
  <!-- END Container-fluid -->
  <% include ../partials/chat %>
  <!-- END of chat  -->
</body>
</html>
