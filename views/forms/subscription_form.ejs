<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title> Graduate School USA | <%= title %></title>
  <% include ../partials/head %>
  <script type="text/javascript" src="/javascripts/forms/subscription.js"></script>
  <script src='https://www.google.com/recaptcha/api.js'></script>
  <link rel="stylesheet" href="/stylesheets/onsite_inquiry.css" media="screen">
  <link rel="stylesheet" href="/stylesheets/library/spinners.css">
  <link rel="stylesheet" href="/stylesheets/library/jquery-ui.css">
  <script src="/javascripts/library/jquery-ui.min.js"></script>
</head>
<body>
  <% include ../partials/header %>
  <div  class="container">
      <div class="loading" style="display:none;"></div>
      <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-12">

          <div id="alertError" class="alert alert-danger" role="alert" style="display:none;">
            <span id="removeAlert" class="glyphicon glyphicon-remove pull-right" aria-hidden="true"></span>
          </div>
          <div id="alertSuccessSubscribe" class="alert alert-sucess" role="alert" style="display:none;">
            <div><b>You have been successfully subscribed.</b></div>
          </div>
          <div id="alertSuccessUnsubscribe" class="alert alert-sucess" role="alert" style="display:none;">
            <div><b>You have been successfully unsubscribed.</b></div>
          </div>
          <div id="alertSuccessModify" class="alert alert-sucess" role="alert" style="display:none;">
            <div><b>You information has been successfully modified.</b></div>
          </div>

          <form>
            <fieldset>
              <legend>Select Types</legend>
              <div class="subscription-type">
                <input type="checkbox" name="txtSubscriptionType" class="subscriptionType" id="subscriptionTypeEmail" value="E-mail"
                 tabindex="1">E-mail</input>
              </div>
              <div class="subscription-type">
                <input type="checkbox" name="txtSubscriptionType" class="subscriptionType" id="subscriptionTypeMail" value="Mail"
                 tabindex="2">Mail</input>
              </div>
            </fieldset>
            <br>

            <fieldset>
              <legend>You would like to</legend>
              <label for="subscriptionAction">You would like to</label>
              <input type="radio" name="radSubscription" id="radioSubscribe" value="Subscribe" checked/>
              <label for="radioSubscribe">Subscribe</label>
              <input type="radio" name="radSubscription" id="radioModify" value="Modify" />
              <label for="radioModify">Modify</label>
              <input type="radio" name="radSubscription" id="radioUnsubscribe" value="Unsubscribe" />
              <label for="radioUnsubscribe">Unsubscribe</label>
            </fieldset>

            <br>
            <fieldset>
              <legend>Please fill out your full name</legend>
              <div class="form-inline">
                <div class="form-group">
                  <label for="inputFirstName">*First Name:</label>
                  <input type="text"  id="txtFirstName" class="form-control" tabindex="1">
                  <label for="inputMiddleName">Middle Name:</label>
                  <input type="text"  id="txtMiddleName" class="form-control" tabindex="2">
                  <label for="inputLastName">*Last Name:</label>
                  <input type="text"  id="txtLastName" class="form-control" tabindex="3">
                </div>
              </div>
            </fieldset >
            <br>

            <fieldset>
              <legend>Please fill out your email</legend>
              <label for="inputEmail">*Email:</label>
              <input type="text" id="txtEmail">
            </fieldset>
            <br>

            <fieldset>
              <legend>Please fill out your full name</legend>
              <div class="form-inline">
                <div class="form-group">
                  <label for="inputStreet">*Street/P.O. Box:</label>
                  <input type="text" id="txtStreet" class="form-control" tabindex="4">
                  <label for="inputApt">Room/Suite/Apt:</label>
                  <input type="text" id="txtApt" class="form-control" tabindex="5">
                </div>
              </div>
              <div class="form-inline">
                <div class="form-group">
                  <label for="inputCity">*City:</label>
                  <input type="text" id="txtCity" class="form-control" tabindex="6">
                  <label for="inputState">*State:</label>
                  <input type="text" id="txtState" class="form-control" tabindex="7">
                </div>
                <div class="form-inline">
                  <div class="form-group">
                    <label for="inputZip">*Zip Code:</label>
                    <input type="text" id="txtZip" class="form-control" tabindex="8">
                    <label for="inputCountry">Country:</label>
                    <input type="text" id="txtCountry" class="form-control" tabindex="9">
                  </div>
                </div>
                <div class="form-inline">
                  <div class="form-group">
                    <label for="inputPhone">*Phone:</label>
                    <input type="text" id="txtPhone" class="form-control" tabindex="10">
                    <label for="inputOrganization">Organization:</label>
                    <input type="text" id="txtOrganizaiton" class="form-control" tabindex="11">
                  </div>
                </div>
              </div>

            </fieldset>

            <br>

            <fieldset>
              <legend>Area Of Interest</legend>
              <% arrayOfContent.forEach(function(content, num) { %>
                <div class="areaOfInterest-for-subscription">
                  <input type="checkbox" name="txtAreaOfInterest" class="areaOfInterest" id="<%= 'areaOfInterest'+num%>" value="<%= content.areaOfInterest %>">
                   <%= content.areaOfInterest %></input>
                </div>
              <% }); %>
            </fieldset>
            <br>

            <div id="subscriptionCaptcha">
              <div class="g-recaptcha" data-sitekey="6Lfj4AsTAAAAAB0NCpQUY3AEeoisB-iNUvzbFsbh"></div>
            </div>

            <br>
            <button type="submit" id="submitForm" name="submitForm" value="submitForm">Submit</button>
            <br>
            <br>



          </form> <!-- END Form -->
        </div>
      </div><!-- END  Row -->
      <div class="spacer"></div>
  </div> <!-- END Container  -->


  <!-- Footer -->
  <% include ../partials/footer %>
  <!-- END Footer  -->
  <!-- Chat  -->
  <% include ../partials/chat %>
  <!-- END of Chat  -->

  </body>
</html>
