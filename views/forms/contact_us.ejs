<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
   <% include ../partials/head %>
  <link rel="stylesheet" href="/stylesheets/onsite_inquiry.css" media="screen" title="no title" charset="utf-8">
</head>

<body>
  <div class="container">
    <div class="row nm header clearfix">
      <title>
        <%= title %>
      </title>
      <% include ../partials/header %>
        <!-- /end Row Container -->
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <h1>
            <%= title %>
          </h1>
          <!-- Accordion Container -->
          <div class="panel-group" id="accordion">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">CONTACT INFORMATION</a>
                </h4>
              </div>
              <div id="collapse1" class="panel-collapse collapse in">
                <div class="panel-body">
                  <div id="contact-information">
                    <div class="form-inline">
                      <div class="form-group">
                        <label for="inputFirstName">*First Name:</label>
                        <input id="first-name" name="firstName" type="text" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <label for="inputLastName">*Last Name:</label>
                        <input id="last-name" name="lastName" type="text" class="form-control" required>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="communication">*Preferred mode of communication</label>
            	      <input type="radio" name="communication" id="radioEmail" value="Email" checked/><label for="radioEmail">Email</label>
			          <input type="radio" name="communication" id="radioPhone" value="Phone"/><label for="radioPhone">Phone</label>
                    </div>
                    <div id="emailGroup" class="form-group">
                      <label for="inputEmail">Email:</label>
                      <input id="email" name="email" type="email" maxlength="255" required class="form-control">
                    </div>
                    <div id="phoneGroup" class="form-group" style="display:none;">
                      <label for="inputPhone">Daytime Phone Number:</label>
                      <input id="phone" name="phone" type="tel" placeholder="XXX-XXX-XXXX" pattern="\d{3}[\-]\d{3}[\-]\d{4}" maxlength="12" class="form-control">
                    </div>
                    <div class="form-group">
                      <label for="inputOtherSubject">*Subject:</label>
                      <select class="form-control" id="inputSubject" name="inputSubject" required>
                        <option id="">Select One</option>
                        <% for (var i=0; i < subjectLine.question.length; i++) { %>
                          <option id="<%= subjectLine.question[i]["name"] %>">
                            <%= subjectLine.question[i]["name"] %>
                          </option>
                          <br/>
                        <% } %>
                      </select>
                    </div>
                    <div id="otherSubject" class="form-group" style="display:none">
                      <label for="inputOtherSubject">Other Subject:</label>
                      <input type="text" id="inputOtherSubject" name="inputOtherSubject" rows="1" cols="40" class="form-control"></textarea>
                    </div>
                    <div class="comments">
                      <label>*Comments or Question:</label>
                      <br>
                      <textarea id="commentText" name="comments" rows="8" cols="40" class="form-control" required></textarea>
                    </div>
                    <div id="captcha">
                      <p>Insert Captcha Here:</p>
                    </div>

                  </div>
                  <!-- contact information div -->
                </div>
              </div>
            </div>
            <br>
            <br>
            <button type="submit" id="submitForm" name="submitForm" value="submitForm">Submit</button>
            <button type="clear" id="clearForm" name="clearForm" value="clearForm">Clear</button>
          </div>
        </div>
      </div>

    </div>
  </div>
  <!-- END Accordion Container -->
  <!-- END  Row -->
  <% include ../partials/chat %>
  <% include ../partials/footer %>
  <script type="text/javascript" src="/javascripts/contact_us.js"></script>
</body>

</html>
