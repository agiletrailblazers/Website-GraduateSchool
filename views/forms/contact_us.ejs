<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <% include ../partials/head %>
  <script type="text/javascript" src="/javascripts/contact_us.js"></script>
  <link rel="stylesheet" href="/stylesheets/contact_us.css" media="screen" title="no title" charset="utf-8">
</head>
<body>
  <div class="container">
    <h1><%= title %>:</h1>
    <div id="contact-information">
      <form id="contactForm" class="form">
      <div class="form-inline">
        <div class="form-group">
          <label for="inputFirstName">*First Name:</label>
          <input name="firstName" type="text" class="form-control">
        </div>
        <div class="form-group">
          <label for="inputLastName">*Last Name:</label>
          <input name="lastName" type="text" class="form-control">
        </div>
        <div class="communication-mode">
          *Preferred mode of communication
          <input type="radio" name="communication" id="radioEmail" value="Male">Email</>
          <input type="radio" name="communication" id="radioPhone" value="Female">Phone</>
        </div>
        <div class="form-group">
          <label for="inputEmail">Email:</label>
          <input name="email" type="email" class="form-control">
        </div>
        <div class="form-group">
          <label for="inputPhone">Daytime Phone Number:</label>
          <input name="phone" type="text" class="form-control">
        </div>
        <div class="form-group">
          <label for="selectsubject">Select Subject line</label>
          <select>
            <option value="subject1">Subject Line 1</option>
            <option value="subject2">Subject Line 2</option>
            <option value="subject3">Subject Line 3</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div class="form-group">
          <label for="inputothersubject">Other:</label>
          <textarea name="othersubject" rows="1" cols="40"></textarea>
        </div>
      </div>
    </div>
    <div class="comments">
      <p>Comments or Questions:</p>
      <textarea name="comments" rows="8" cols="40"></textarea>
    </div>
    <div id="captcha">
      <p>Insert Captcha Here:</p>
    </div>
    <button id="submitForm" type="submit" value="submitForm">Submit</button>
    <button type="clear" value="clearForm">Clear</button>
    </form>
    <br><br><br>
  </div><!-- Container Div -->
</body>
</html>
