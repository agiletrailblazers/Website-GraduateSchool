<!DOCTYPE html>
<html>

<head>
  <title> Graduate School USA | <%= title %> </title>
  <meta charset="utf-8">
  <script src='https://www.google.com/recaptcha/api.js'></script>
  <% include ../partials/head %>
  <script src="/javascripts/forms/request_course_completion_certificate.js" type="text/javascript"></script>
  <link rel="stylesheet" href="/stylesheets/library/spinners.css">
  <link rel="stylesheet" href="/stylesheets/library/jquery-ui.css">
  <script src="/javascripts/library/jquery-ui.min.js"></script>
</head>

<body>
  <% include ../partials/header %>
  <div class="container">
    <div class="loading" style="display:none;"></div>
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-12">
        <h1>
          <%= title %>
        </h1>
        <div id="alertError" class="alert alert-danger" role="alert" style="display:none;">
          <span id="removeAlert" class="glyphicon glyphicon-remove pull-right" aria-hidden="true"></span>
        </div>

        <div id="duplicateForm-information">
          <div class="form-inline">
            <div class="form-group"> <p>
              <%- sectionHeaderDescription %>
            </p></div>
          </div>
          <div id="requestDuplicateForm">
            <form>
              <div class="form-inline">
                <div class="form-group" id="requestDuplicate">
                  <label for="Request">Request a Duplicate for:</label><br>
                  <input type="radio" name="reqestDuplicate" id="radioCertificate" value="Completion Certificate" checked/>
                  <label for="radioCertificate"><strong>Course Completion Certificate </strong></label>
                  <input type="radio" name="reqestDuplicate" id="radioGradeReport" value="Official Grade Report" />
                  <label for="radioGradeReport"><strong>Official Grade Report </strong></label>
                </div>
              </div>
              <div class="form-inline">
                <div class="form-group">
                  <label for="inputFirstName">*First Name</label>
                  <input id="txtFirstName" name="firstName" type="text" class="form-control" tabindex="1" required>
                  <label for="inputLastName">*Last Name</label>
                  <input id="txtLastName" name="lastName" type="text" class="form-control" tabindex="2" required>
                </div>
              </div>
              <div class="form-inline">
                <span class="form-group">
                  <label for="txtEmail">*Email</label>
                  <input type="email" id="txtEmail" class="form-control" size="30" tabindex="3">
                </span>
              </div>
              <div class="form-inline">
                <span class="form-group">
                  <label for="txtStreet">Street Address</label>
                  <input type="text" id="txtStreet" class="form-control" tabindex="4">
                </span>
                <span class="form-group">
                  <label for="txtSuite">Suite, Mail Stop</label>
                  <input type="text" id="txtSuite" class="form-control" size="20"  tabindex="5">
                </span>
              </div>
              <div class="form-inline">
                <span class="form-group">
                  <label for="txtCity">City</label>
                  <input type="text" id="txtCity" class="form-control" tabindex="6">
                </span>
                <span class="form-group">
                  <label for="selState">State</label>
                  <select id="selState" class="form-control" tabindex="7">
                    <option value="">Select One</option>
                    <% for (i = 0; i < states.length; i++) { %>
                      <option value="<%= states[i].abbreviation %>"><%= states[i].name %></option>
                      <% } %>
                    </select>
                  </span>
                  <span class="form-group">
                    <label for="txtZip">Zip</label>
                    <input type="text" id="txtZip" class="form-control" tabindex="8">
                  </span>
                </div>
                <div class="form-inline">
                  <span class="form-group">
                    <label for="txtPhone">*Daytime Phone Number</label>
                    <input id="telPhone" name="phone" type="tel" placeholder="XXX-XXX-XXXX"
                    pattern="\d{3}[\-]\d{3}[\-]\d{4}"
                    maxlength="12" class="form-control" tabindex="9">
                  </span>
                </div>
                <div class="form-inline">
                  <span class="form-group">
                    <label for="txtCourseNumber">*Course number</label>
                    <input type="text" id="txtCourseNumber" class="form-control" size="20" tabindex="10" required>
                  </span>
                  <span class="form-group">
                    <label for="txtCourseTitle">*Course Title</label>
                    <input type="text" id="txtCourseTitle" class="form-control" size="40" tabindex="11" required>
                  </span>
                </div>
                <div class="form-inline">
                  <span class="form-group">
                    <label for="txtInstructor">*Instructor</label>
                    <input type="text" id="txtInstructor" class="form-control" size="30" tabindex="12" required>
                  </span>
                </div>
                <div class="form-inline">
                  <span class="form-group">
                    <label for="dateStart">Course Start Date</label>
                    <input type="text" id="dateStart" class="form-control"  name="dateStart" placeholder="MM/DD/YYYY" tabindex="13">
                  </span>
                  <span class="form-group">
                    <label for="dateEnd">Course End Date</label>
                    <input type="text" id="dateEnd"  class="form-control" name="dateEnd" placeholder="MM/DD/YYYY" tabindex="14">
                  </span>
                </div>
                <div class="form-inline">
                  <span class="form-group">
                    <label for="txtCourseLocation">Course Location</label>
                    <input type="text" id="txtCourseLocation"  class="form-control" name="txtCourseLocation"  tabindex="15">
                  </span>

                </div>
                <br>
                <div id="captcha">
                  <div class="g-recaptcha" data-sitekey="6Lfj4AsTAAAAAB0NCpQUY3AEeoisB-iNUvzbFsbh"></div>
                </div>
                <br>
                <button type="reset" id="clearForm" name="reset" value="reset">Clear</button>
                <button type="submit" id="submitForm" name="submitForm" value="submitForm">Submit</button>
                <br>
                <br>
                <div class="form-inline">
                  <div class="form-group"> <p>
                  <%- sectionFooterDescription %>
                  </p></div>
                </div>
            </form>
         </div> <!-- End #requestDuplicateForm -->
       </div> <!--  #duplicateForm-information -->
       </div> <!-- END left column -->

        <% if (relatedLinks && relatedLinks.length > 0) { %>
        <div class="col-lg-3 col-md-3 col-sm-12" id="sidebar">
          <div class="panel-group">
            <div class="panel panel-default related-links">
              <div class="panel-heading related-links">
                    <h4 class="panel-title">
                      <a data-toggle="collapse" href="#related-links">Related links</a>
                    </h4>
              </div>
              <div id="related-links" class="panel-collapse collapse in">
                <div class="panel-body">
                  <ul>
                  <% relatedLinks.forEach(function(link) { %>
                    <li><a href="<%= link.url %>"><%= link.name %></a></li>
                    <hr>
                  <% }); %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div> <!-- END right column -->
        <% } %>
      </div><!-- END Row -->
      <div class="spacer"></div>
    </div> <!-- END Container -->

  <% include ../partials/chat %>
  <% include ../partials/footer %>

  <script type="text/javascript">
  $(function() {
    $("#dateStart").datepicker();
    $("#dateEnd").datepicker();
  });

  </script>
</body>
</html>
