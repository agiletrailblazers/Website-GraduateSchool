<!DOCTYPE html>
<html>

<head>
  <title>Contact Us</title>
  <meta charset="utf-8">
  <script src='https://www.google.com/recaptcha/api.js'></script>
  <% include ../partials/head %>
  <script src="/javascripts/forms/request-duplicate-form.js" type="text/javascript"></script>
  <link rel="stylesheet" href="/stylesheets/library/spinners.css">
</head>

<body>
  <% include ../partials/header %>
  <div class="container">
    <div class="loading" style="display:none;"></div>
    <div class="row">
      <div class="col-lg-9 col-md-9 col-sm-12">
        <h1>
          <%= title %>
        </h1>

        <div id="duplicateForm-information">
          <label for="selectionHeader"><%= sectionHeaderDescription %></label>

          <form id="requestDuplicateForm">
            <div class="form-inline">
              <div class="form-group">
                <label for="inputFirstName">*First Name</label>
                <input id="txtFirstName" name="firstName" type="text" class="form-control" required>
                <label for="inputLastName">*Last Name</label>
                <input id="txtLastName" name="lastName" type="text" class="form-control" required>
              </div>
            </div>
            <div class="form-inline">
              <span class="form-group">
                <label for="txtStreet">Street Address</label>
                <input type="text" id="txtStreet" class="form-control"  tabindex="4">
              </span>
              <span class="form-group">
                <label for="txtSuite">Suite, Mail Stop</label>
                <input type="text" id="txtSuite" class="form-control"  tabindex="5">
              </span>
            </div>
            <div class="form-inline">
              <span class="form-group">
                <label for="txtCity">City</label>
                <input type="text" id="txtCity" class="form-control"  tabindex="6">
              </span>

              <span class="form-group">
                <label for="txtZip">Zip</label>
                <input type="text" id="txtZip" class="form-control"  tabindex="8">
              </span>
            </div>
            <div class="form-inline">
              <span class="form-group">
                <label for="txtCountry">Country (if not U.S.)</label>
                <input type="text" id="txtCountry" class="form-control"  tabindex="9">
              </span>
            </div>
            <div class="form-inline">
              <span class="form-group">
                <label for="txtPhone">*Daytime Phone Number</label>
                <input id="telPhone" name="phone" type="tel" placeholder="XXX-XXX-XXXX" pattern="\d{3}[\-]\d{3}[\-]\d{4}"
                maxlength="12" class="form-control">
              </span>
              <span class="form-group">
                <label for="txtFax">Fax Number</label>
                <input type="text" id="txtFax" class="form-control"  tabindex="11">
              </span>
            </div>
            <div class="form-inline">
              <span class="form-group">
                <label for="txtEmail">*Email</label>
                <input type="email" id="txtEmail" class="form-control" size="50"  tabindex="12">
              </span>
            </div>

            <div id="captcha">
              <div class="g-recaptcha" data-sitekey="6Lfj4AsTAAAAAB0NCpQUY3AEeoisB-iNUvzbFsbh"></div>
            </div>
            <br>
            <button type="submit" id="submitForm" name="submitForm" value="submitForm">Submit</button>
            <button type="reset" id="clearForm" name="reset" value="reset">Clear</button>
            <br>
            <br>
          </form>
          <label for="selectionFooter"><%= sectionFooterDescription %></label>
        </div>


      </div>
      <!-- END  Row -->
      <div class="spacer"></div>
    </div>
  </div>
  <!-- END Container -->

  <% include ../partials/chat %>
  <% include ../partials/footer %>

</body>
</html>
